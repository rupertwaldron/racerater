<% include ../partials/header %>

       <div id="newSiteForm" class="container">
            <h3 id="newSiteHeader">Edit User: <%= user.username %> </h3>
            
            <form action = "/users/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" id="firstName" type = "text" name = "user[firstName]" value = "<%= user.firstName %>" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" id="lastName" type = "text" name = "user[lastName]" value= "<%= user.lastName %>" required>
                </div>
                <div class="form-group">
                    <a href="/users/<%= user._id %>/image"> 
                        <img style="width:450px;height:100%" src="<%= user.avatar %>" alt="Update Image" >
                    </a>
                    <!--<label for="image">Update Image</label>-->
                    <!--<input class="form-control" type = "file" id="image" name = "image" accept="image/*" value="< user.avatar %>">-->
                    <!--<input class="form-control" type = "url" name = "user[avatar]" value = "" required><br>-->
                </div>
                 <div class="form-group">
                     <label for="email">Email</label>
                    <input class="form-control" id="email" type = "email" name = "user[email]" value = "<%= user.email %>" required><br>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Update</button>
            </form>
            <br>
            <a href="/users/<%= user._id %>">Go Back</a>
        </div>
        
