<% include ../partials/header %>

    <div id="newSiteForm" class="container">
        <h3 id="newSiteHeader"<%= user.username %></h3>
            <div class ="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                        <img class="card-img-top" src="<%= user.avatar %>" alt="user profile image">
                        <div class="card-title">
                            <h1><%= user.firstName + ' ' + user.lastName %></h1>
                        </div>
                        <div class='caption'><a href='mailto:<%= user.email %>'><%= user.email %></a></div>
                    </div>
                </div>
                <div class="card-text"></div>
                    <% if(currentUser) { %>
                        <% if ((user.id == currentUser._id) || currentUser.isAdmin) { %>
                            <p>
                                <a class="btn btn-sm btn-warning" href="/users/<%= user._id %>/edit">Edit</a>
                            </p>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
 <a href="/">Go Back</a>
 

<% include ../partials/footer %>