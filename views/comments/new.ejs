<% include ../partials/header %>



        <div id="newSiteForm" class="container">
            <h1 id="newSiteHeader">Add a New Comment to <%= campground.name %></h1>
            
            <form action = "/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <!--using comment[text] and comment[author] puts the attributes in a comment object-->
                    <div class="form-group">
                        <input class="form-control" type = "text" name = "comment[text]" placeholder = "Text">
                    </div>
                       
                    <div class="form-group">
                       <fieldset class="rating">
                            <legend>Please rate:</legend>
                            <input type="radio" id="star5" name="comment[stars]" value="5" /><label for="star5" title="Rocks!">5 stars</label>
                            <input type="radio" id="star4" name="comment[stars]" value="4" /><label for="star4" title="Pretty good">4 stars</label>
                            <input type="radio" id="star3" name="comment[stars]" value="3" /><label for="star3" title="Meh">3 stars</label>
                            <input type="radio" id="star2" name="comment[stars]" value="2" /><label for="star2" title="Kinda bad">2 stars</label>
                            <input type="radio" id="star1" name="comment[stars]" value="1" /><label for="star1" title="Sucks big time">1 star</label>
                        </fieldset>
                    </div>
                    
                   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>    
            </form>
            <br>
            <a href="/campgrounds">Go Back</a>
        </div>



<% include ../partials/footer %>