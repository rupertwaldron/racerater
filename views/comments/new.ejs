<% include ../partials/header %>



        <div id="newSiteForm" class="container">
            <h1 id="newSiteHeader">Add a New Comment to <%= campground.name %></h1>
            
            <form action = "/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <!--using comment[text] and comment[author] puts the attributes in a comment object-->
                    <input class="form-control" type = "text" name = "comment[text]" placeholder = "Text">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>    
            </form>
            <br>
            <a href="/campgrounds">Go Back</a>
        </div>



<% include ../partials/footer %>