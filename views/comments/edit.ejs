<% include ../partials/header %>



        <div id="newSiteForm" class="container">
            <h3 id="newSiteHeader">Edit Comment</h3>
            
             <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <label for="comment[stars]">Star Rating 0 to 5</label>
                    <input type="range" name="comment[stars]" id="range_weight"  min="0" max="5" step="1" oninput="range_weight_disp.value = range_weight.value">
                    <output  id="range_weight_disp"></output>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        
        </div>



<% include ../partials/footer %>