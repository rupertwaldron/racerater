<% include ../partials/header %>



        <div id="newSiteForm" class="container">
            <h3 id="newSiteHeader">Edit Comment</h3>
            
             <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control txtBox" rows="10" type="text" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <fieldset class="rating">
                        <legend>Please rate:</legend>
                        <input type="radio" id="star5" name="comment[stars]" value="5" /><label for="star5" title="Rocks!">5 stars</label>
                        <input type="radio" id="star4" name="comment[stars]" value="4" /><label for="star4" title="Pretty good">4 stars</label>
                        <input type="radio" id="star3" name="comment[stars]" value="3" /><label for="star3" title="Meh">3 stars</label>
                        <input type="radio" id="star2" name="comment[stars]" value="2" /><label for="star2" title="Kinda bad">2 stars</label>
                        <input type="radio" id="star1" name="comment[stars]" value="1" /><label for="star1" title="Sucks big time">1 star</label>
                    </fieldset>

                    
                    
                    <!--<label for="comment[stars]">Star Rating 0 to 5</label>-->
                    <!--<input type="range" name="comment[stars]" id="range_weight"  min="0" max="5" step="1" oninput="range_weight_disp.value = range_weight.value">-->
                    <!--<output  id="range_weight_disp"></output>-->
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        
        </div>



<% include ../partials/footer %>