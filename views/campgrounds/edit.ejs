<% include ../partials/header %>



        <div id="newSiteForm" class="container">
            <h1 id="newSiteHeader">Edit <%= campground.name %></h1>
            
            <form action = "/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Race Name</label>
                    <input class="form-control" id="name" type = "text" name = "campground[name]" value= "<%=campground.name %>">
                </div>
                 <div class="form-group">
                    <label for="organiser">Organiser</label>
                    <input class="form-control" id="organiser" type = "text" name = "campground[organiser]" value= "<%=campground.organiser %>">
                </div>
                 <div class="form-group">
                    <label for="website">Website https://</label>
                    <input class="form-control" id="website" type = "text" name = "campground[website]" value= "<%=campground.website %>">
                </div>
                <div class="form-group">
                    <a href="/campgrounds/<%= campground._id %>/image"> 
                        <img style="width:450px;height:100%" src="<%= campground.image %>" alt="Update Image" >
                    </a>
                </div>
                <!--<div class="form-group">-->
                <!--    <label for="image">Image</label>-->
                <!--    <input class="form-control" type = "file" id="image" name = "image" accept="image/*" required value="<%= campground.image %>">-->
                <!--</div>-->
                <div class="form-group">
                    <label for="price">Entry Fee</label>
                    <input class="form-control" id="price" type = "number" name = "campground[price]" value = "<%=campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" id = "location" type = "text" name = "campground[location]" value = "<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Race Description</label>
                    <textarea class="form-control txtBox" id="description" type = "text" name = "campground[description]" ><%=campground.description %></textarea>
                </div>
                 <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>  
            </form>
            <br>
            <a href="/campgrounds">Go Back</a>
        </div>



<% include ../partials/footer %>