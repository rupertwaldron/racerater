<% include ../partials/header %>



        <div id="newSiteForm" class="container">
            <h1 id="newSiteHeader">Edit <%= campground.name %></h1>
            <h3 id="newSiteHeader">Edit Owner: <%= campground.author.username %></h3>
            
            <form action = "/campgrounds/<%= campground._id %>/owner?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="username">Update Campsite Owner</label>
                    <input class="form-control" id="username" type = "text" name = "username" value= "<%=campground.author.username %>">
                </div>

                 <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>  
            </form>
            <br>
            <a href="/campgrounds">Go Back</a>
        </div>



