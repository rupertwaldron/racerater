<% include ../partials/header %>



        <div id="newSiteForm" class="container">
            <h3 id="newSiteHeader">Add a New Campsite</h3>
            
            <form action = "/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type = "text" name = "campground[name]" placeholder = "Add new race">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type = "file" id="image" name = "image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "number" name = "campground[price]" placeholder = "Entry fee Â£" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name = "campground[lat]" placeholder = "Latitude">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name = "campground[long]" placeholder = "Longitude">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name = "campground[description]" placeholder = "Description"><br>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <br>
            <a href="/campgrounds">Go Back</a>
        </div>



<% include ../partials/footer %>